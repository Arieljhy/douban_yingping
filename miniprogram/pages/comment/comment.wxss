/* pages/comment/comment.wxss */
.detail-container{
height: 400rpx;
opacity: .9;
filter:blur(40rpx)
}
.detail-mask{
position: absolute;
left: 0;
top: 0;
z-index: -1;
width: 100%;
height: 400rpx;
background: #333;
}
.detail-info{
position: absolute;
top: 0;
left: 0;
height: 400rpx;
width: 100%;
padding: 20rpx;
display: flex;
}
/* 左侧图片 */
.detail-img{
width: 280rpx;
height: 90%;
margin-right: 24rpx;
}
/* 右侧文字区域 */
.detail{
line-height: 60rpx;
}
.detail view{
color: #fff;
font-size: 24rpx;
}
.comment-img{
width: 200rpx;
height: 200rpx;
margin-right: 20rpx;
}